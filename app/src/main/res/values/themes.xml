<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ✅ Cambia a AppCompat -->
    <style name="Theme.AgalWebViewApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.AgalWebViewApp.NoActionBar" parent="Theme.AgalWebViewApp" />

    <!-- ✅ Splash Screen con AppCompat -->
    <style name="Theme.AgalWebViewApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.AgalWebViewApp.NoActionBar</item>
    </style>
</resources>